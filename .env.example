# Huly Configuration
# Replace with your actual domain
HOST_ADDRESS=huly.example.com

# Service Versions
HULY_VERSION=v0.7.353

# Secrets - CHANGE THESE FOR PRODUCTION
SECRET=your_secret_here
HULY_SECRET=your_secret_here
COCKROACH_SECRET=your_cockroach_password
REDPANDA_SECRET=your_redpanda_password
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# CockroachDB
CR_DATABASE=huly
CR_USERNAME=huly
CR_USER_PASSWORD=${COCKROACH_SECRET}
CR_DB_URL=postgres://${CR_USERNAME}:${COCKROACH_SECRET}@cockroach:26257/${CR_DATABASE}

# Redpanda
REDPANDA_ADMIN_USER=admin
REDPANDA_ADMIN_PWD=${REDPANDA_SECRET}

# MinIO
MINIO_ROOT_USER=${MINIO_ACCESS_KEY}
MINIO_ROOT_PASSWORD=${MINIO_SECRET_KEY}

# Feature Flags
TITLE=Huly Self Host
DEFAULT_LANGUAGE=en
LAST_NAME_FIRST=true
DISABLE_SIGNUP=false

# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_SOURCE=huly@example.com
